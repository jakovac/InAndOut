@model IEnumerable<InAndOut.Models.Expense>
@{
    ViewData["Title"] = "Index";
}

<h1>Expenses</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="25%">@item.ExpenseName</td>
                    <td width="25%">@item.Amount</td>
                    <td width="25%">@item.ExpenseType.ExpenseTypeName</td>
                    <td width="25%" align="center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>

                }

            </tbody>
        </table>
    }
    else
    {
        <p>No expenses created yet</p>
    }

</div>